@using EmployeesApp.Web.Views.Company
@model CompanyVM

@{
    ViewBag.Title = "Company List";
}

<ul>
    @foreach (var company in Model.CompaniesVMs)
    {
        <li>
            @company.Name <a asp-controller="Company" asp-action="delete" asp-route-id="@company.Id"><button>Delete Company</button></a>
        </li>
    }
</ul>